{
  "$schema": "vscode://schemas/color-theme",
  "name": "BlackBoard offshore",
  "colors": {
    "foreground": "#F8F8F8",
    "focusBorder": "#FF5500",
    "errorForeground": "#FF00FF",
    "descriptionForeground": "#CCCCCC",
    "editor.background": "#080808",
    "editor.foreground": "#F8F8F8",
    "editor.lineHighlightBackground": "#1C0A0A",
    "editor.selectionBackground": "#550000",
    "editor.selectionForeground": "#FF7777",
    "editorCursor.foreground": "#FF7777",
    "editorWhitespace.foreground": "#55555533",
    "editorLineNumber.foreground": "#AAAAAA80",
    "editorLineNumber.activeForeground": "#FFFFFF",
    "editorBracketMatch.background": "#080808",
    "editorBracketMatch.border": "#FF5500",
    "editor.findMatchBackground": "#FF00FF44",
    "editor.hoverHighlightBackground": "#FF444444",
    "sideBar.background": "#080808",
    "sideBar.foreground": "#F8F8F8",
    "sideBarSectionHeader.background": "#1C0A0A",
    "sideBar.border": "#2E2E2E",
    "activityBar.background": "#080808",
    "activityBar.foreground": "#F8F8F8",
    "activityBar.activeBorder": "#FF5500",
    "activityBarBadge.background": "#FF7700",
    "activityBarBadge.foreground": "#080808",
    "titleBar.activeBackground": "#080808",
    "titleBar.activeForeground": "#F8F8F8",
    "titleBar.inactiveBackground": "#1C0A0A",
    "titleBar.inactiveForeground": "#888888",
    "tab.activeBackground": "#080808",
    "tab.activeForeground": "#FF7777",
    "tab.inactiveBackground": "#1C0A0A",
    "tab.inactiveForeground": "#888888",
    "tab.hoverBackground": "#330000",
    "tab.border": "#2E2E2E",
    "tab.activeBorderTop": "#FF5500",
    "statusBar.background": "#080808",
    "statusBar.foreground": "#F8F8F8",
    "statusBar.border": "#2E2E2E",
    "terminal.background": "#080808",
    "terminal.foreground": "#F8F8F8",
    "terminalCursor.foreground": "#FF7777",
    "terminal.ansiBlack": "#1A1A1A",
    "terminal.ansiRed": "#FF5500",
    "terminal.ansiGreen": "#00FF00",
    "terminal.ansiYellow": "#FFAA00",
    "terminal.ansiBlue": "#1E90FF",
    "terminal.ansiMagenta": "#FF00FF",
    "terminal.ansiCyan": "#00FFFF",
    "terminal.ansiWhite": "#FFFFFF",
    "editorGroup.border": "#2E2E2E",
    "editorGroupHeader.tabsBackground": "#080808",
    "button.background": "#2E2E2E",
    "button.foreground": "#F8F8F8",
    "button.hoverBackground": "#3A0A0A",
    "input.background": "#1C0A0A",
    "input.border": "#2E2E2E",
    "input.foreground": "#F8F8F8",
    "input.placeholderForeground": "#555555",
    "list.activeSelectionBackground": "#550000",
    "list.activeSelectionForeground": "#FF7777",
    "list.hoverBackground": "#1C0A0A",
    "list.inactiveSelectionBackground": "#080808",
    "badge.background": "#FF5500",
    "badge.foreground": "#080808",
    "progressBar.background": "#FF5500",
    "widget.border": "#2E2E2E"
  },
  "tokenColors": [
    { "scope": ["keyword", "storage.type", "storage.modifier"], "settings": { "foreground": "#FF5500" } },
    { "scope": ["constant", "variable.language", "support.constant"], "settings": { "foreground": "#FF00FF" } },
    { "scope": ["string", "constant.character"], "settings": { "foreground": "#FF7777" } },
    { "scope": ["comment"], "settings": { "foreground": "#555555" } },
    { "scope": ["entity.name.function", "support.function"], "settings": { "foreground": "#FFAA00" } },
    { "scope": ["variable", "identifier"], "settings": { "foreground": "#FFFFFF" } },
    { "scope": ["punctuation", "keyword.operator"], "settings": { "foreground": "#FF5500" } },
    { "scope": ["markup.heading", "markup.bold"], "settings": { "foreground": "#FF7777" } },
    { "scope": ["markup.italic", "markup.quote"], "settings": { "foreground": "#FF00FF" } }
  ]
}
